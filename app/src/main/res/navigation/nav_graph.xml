<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/movieListFragment">

    <fragment
        android:id="@+id/movieListFragment"
        android:name="com.android.benedictcumberbatchapp.ui.movie.MovieListFragment"
        android:label="Movie List"
        tools:layout="@layout/fragment_movie_list">

        <action
            android:id="@+id/action_movieListFragment_to_detailsFragment"
            app:destination="@id/detailsFragment">

            <argument
                android:name="result"
                app:argType="com.android.benedictcumberbatchapp.data.model.Result"
                android:defaultValue="@null"
                app:nullable="true"/>

        </action>



        <!--  <action
              android:id="@+id/action_movieListFragment_to_detailsFragment"
              app:destination="@id/detailsFragment" />-->
    </fragment>


   <fragment
         android:id="@+id/detailsFragment"
         android:name="com.android.benedictcumberbatchapp.ui.detail.DetailsFragment"
         android:label="Movie Details"
         tools:layout="@layout/fragment_details" />
</navigation>